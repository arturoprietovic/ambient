{
  "compilerOptions": {
    "target": "ES2020",                         
    "module": "CommonJS",                       
    "moduleResolution": "node",                 
    "outDir": "dist",                           
    "rootDir": "src",                           
    "strict": true,                             
    "esModuleInterop": true,                    
    "forceConsistentCasingInFileNames": true,   
    "skipLibCheck": true,                       
    "resolveJsonModule": true,                  
    "noImplicitAny": false,                     
    "sourceMap": true                            
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
